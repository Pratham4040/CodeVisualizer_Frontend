{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "declaration": false,
    "allowImportingTsExtensions": true
  },
  "include": ["vite.config.js", "vite.config.ts"]
}
